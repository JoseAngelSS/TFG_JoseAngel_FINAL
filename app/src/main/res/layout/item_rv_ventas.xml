<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#12E6E6"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgventa"
        android:layout_width="143dp"
        android:layout_height="164dp"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:srcCompat="@drawable/caja" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_ref_rvI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Ref:" />

        <TextView
            android:id="@+id/txt_idComp_rvI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="ID del componente:" />

        <TextView
            android:id="@+id/txt_udvend_rvI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Unidades vendidas:" />

    </LinearLayout>
</LinearLayout>