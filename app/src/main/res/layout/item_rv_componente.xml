<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    tools:context=".RecyclerView.ComponenteFirebaseUIViewHolder">

    <ImageView
        android:id="@+id/img_item_prod"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_item_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Nombre:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_marca_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Marca:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_stock_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Stock:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_precio_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Precio:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_ref_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Referencia:"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>