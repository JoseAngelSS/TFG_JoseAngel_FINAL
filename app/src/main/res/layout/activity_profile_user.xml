<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUserActivity">
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:text="Nombre de usuario"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editarpersona"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_edt_user" />

    <TextView
        android:id="@+id/profile_mail"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:text="Correo"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editarcorreo"
        app:layout_constraintTop_toBottomOf="@+id/profile_name" />

    <TextView
        android:id="@+id/profile_pass"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:text="ContraseÃ±a/pass"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btneditaruser"
        app:layout_constraintEnd_toStartOf="@+id/editarpass"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_mail"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editarpersona"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_edt_user" />

    <EditText
        android:id="@+id/editarcorreo"
        android:layout_width="186dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarpersona" />

    <EditText
        android:id="@+id/editarpass"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:hint="Pass"
        android:inputType="textPersonName"
        android:autofillHints="password"
        app:layout_constraintBottom_toTopOf="@+id/btneditaruser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarcorreo"
        app:layout_constraintVertical_bias="0.011" />

    <ImageView
        android:id="@+id/img_edt_user"
        android:layout_width="147dp"
        android:layout_height="142dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/ajustes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btneditaruser"
        android:layout_width="115dp"
        android:layout_height="54dp"
        android:layout_marginBottom="192dp"
        android:text="editar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnguardar"
        android:layout_width="117dp"
        android:layout_height="5dp"
        android:layout_marginBottom="192dp"
        android:text="GUARDAR"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:onClick="volver_menu"
        android:text="VOLVER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnguardar"
        app:layout_constraintVertical_bias="0.476" />

</androidx.constraintlayout.widget.ConstraintLayout>